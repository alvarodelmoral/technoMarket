{% extends "base.html.twig" %}
{% block titulo %}Contacto - {{ parent() }}{% endblock %}

{% block sidebar %}
    {{ include('menu.html.twig', { 'seccionActual': "/contacto" }) }}
{% endblock %}

{% block body %}
{% for flash_message in app.session.flashbag.get('success') %}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
  <strong>Gracias por contactarnos.</strong>        {{ flash_message }}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{% endfor %}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
    <li class="breadcrumb-item active" aria-current="page">Contacto</li>
  </ol>
</nav>
<div class = "container">
  <h1> Contáctanos </h1>
  <p id = "subtitulo">
    ¿Alguna duda? No dudes en contactar con nosotros o en mirar las dudas
    frecuentes
  </p>
  <br />
  <div class = "row">
    <div class = "col-xl-5">
      {{ form_start(contacto) }}
        <div class = "form-row">
          <div class = "form-group col-md-6">
            <label for = "email"> Correo electrónico * </label>
          {{ form_row(contacto.email) }} 
         </div>
          <div class = "form-group col-md-6">
            <label for = "nombre"> Nombre * </label>
          {{ form_row(contacto.nombre) }} 
        </div>
        <div class = "form-group col-md-6">
          <label for = "direccion"> Dirección * </label>
          {{ form_row(contacto.direccion) }} 
        </div>
        <div class = "form-group col-md-6">
          <label for = "asunto"> Asunto * </label>
          {{ form_row(contacto.asunto) }} 
        </div>
        <div class="form-group col-md-6">
            <label for="mensaje">Mensaje *</label>
          {{ form_row(contacto.mensaje) }} 
        </div>
        <div class="form-group col-md-6"></div>
        <div class="form-check col-md-12">
          {{ form_row(contacto.agreeTerms) }} 
            <p></p>
        </div>
        <div class="form-check col-md-12">
          {{ form_row(contacto.enviar) }} 
        </div>
        </div>
      {{ form_end(contacto) }}
    </div>
    <div class = "col-xl-4">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3163.1037470088754!2d-5.0838176151925465!3d37.55261941764696!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd12caea8e08f2bb%3A0x4dd34539e2aa7b93!2sI.E.S.%20Luis%20V%C3%A9lez%20de%20Guevara!5e0!3m2!1ses!2ses!4v1587033873345!5m2!1ses!2ses" width="600" height="450"
       frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
    </div>
</div>
</div>
</br></br>
</br></br>
{% endblock %}
